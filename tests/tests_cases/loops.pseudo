# Демонстрация циклов и условий
sum = 0;
count = 10;

# Цикл for для суммирования четных чисел
for i in range(1, count + 1) {
    # Проверка на четность с помощью остатка от деления
    remainder = i % 2;
    if (remainder == 0) {
        sum = sum + i;
        print("Added even number: " + i);
    }
}

print("Sum of even numbers: " + sum);

# Цикл while для обратного отсчета
counter = 5;
while (counter > 0) {
    print("Countdown: " + counter);
    counter = counter - 1;
}

print("Finished!");